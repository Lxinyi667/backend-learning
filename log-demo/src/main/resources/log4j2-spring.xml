<?xml version="1.0" encoding="UTF-8"?>
<configuration status="warn">
    <appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout
                    pattern="[%style{%d}{bright,yellow}][%highlight{%p}][%style{%t}{bright,blue}][%style{%C}{bright,cyan}]: %msg%n%style{%throwable}{red}">
            </PatternLayout>
            <Properties>
                <Property name="application">./logs</Property>
            </Properties>
        </Console>

        <RollingFile name="RollingFile" fileName="E:\backend-learning\log-demo\logs\application.log"
                     filePattern="${LOG_PATH}/application-%d{yyyy-MM-dd}.log.gz"
                     ignoreExceptions="false">
            <PatternLayout>
                <pattern>%d %p %c{1.} [%t] %m%n</pattern>
            </PatternLayout>
            <Policies>
                <TimeBasedTriggeringPolicy/>
                <SizeBasedTriggeringPolicy size="100 MB"/>
            </Policies>
        </RollingFile>
    </appenders>

    <loggers>
        <root level="INFO">
            <appender-ref ref="Console" level="debug"/>
            <appender-ref ref="RollingFile" level="info"/>
        </root>
    </loggers>
</configuration>
