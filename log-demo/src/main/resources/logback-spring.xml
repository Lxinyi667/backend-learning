<?xml version="1.0" encoding="UTF-8"?>
<configuration>
<!--    文件路径-->
    <property name="LOG_PATH" value="./logs"/>
    <!-- consoleAppender 将日志消息输出到控制台-->
    <appender name="consoleAppender" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>
                %yellow(%d{yyyy-MM-dd HH:mm:ss}) %green([%thread]) %highlight(%-5level) %boldMagenta(%logger{10})-%cyan(%msg%n)
            </pattern>
        </encoder>
    </appender>
<!--    日志文件-->
    <!-- fileAppender 将日志消息输出到指定的文件-->
    <appender name="fileAppender" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_PATH}/mylog.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${LOG_PATH}/mylog-%d{yyyy-MM-dd}.gz</fileNamePattern>
            <maxHistory>7</maxHistory>
        </rollingPolicy>
        <encoder>
<!--            输出格式-->
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} | %thread | %-5level %logger{26} : %msg%n</pattern>
        </encoder>
    </appender>

<!--    logger 可以为特定的包或类配置记录级别。在本示例中，top.mqxu.log 包的记录级别被设置为DEBUG-->
    <logger name="top.lxyi.logdemo.controller" level="DEBUG"/>
    <root level="INFO">
        <appender-ref ref="consoleAppender"/>
        <appender-ref ref="fileAppender"/>
    </root>

</configuration>
